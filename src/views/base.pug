doctype html
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        meta(charset="UTF-8")
        //- mvp css , 임시 css
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        main
            header 
                h1=pageTitle     
                nav 
                    ul 
                        li 
                            a(href="/") Home
                        if loggedIn
                            li 
                                a(href="/users/logout") Logout
                            li 
                                a(href="/profile") 
                                    if loggedInUser.name
                                        span=loggedInUser.name
                                    else 
                                        span=loggedInUser.username
                        else 
                            li 
                                a(href="/join") Join
                            li 
                                a(href="/login") Login
                        li 
                            a(href="/videos/upload") Upload
                        li 
                            a(href="/search") Search
            block content
        
        include partials/footer.pug